!URxvt


!General settings
URxvt.scrollBar: False
URxvt.cursorBlink: True
URxvt.termName: rxvt-unicode-256color
URxvt.depth: 32
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: true
URxvt*scrollTtyKeypress: true
URxvt*saveLines: 10000
URxvt.iso14755: false
URxvt.iso14755_52: false

!URxvt font
URxvt.font: xft:Hack:size=10
URxvt.letterSpace: -1

!URxvt color scheme
URxvt.background: #1d1f21
URxvt.foreground: #c5c8c6
!URxvt.fadeColor: #002b36
URxvt.cursorColor: #93a1a1
URxvt.pointerColorBackground: #586e75
URxvt.pointerColorForeground: #93a1a1
! black dark/light
URxvt.color0: #1d1f21
URxvt.color8: #969896
! red dark/light
URxvt.color1: #cc6666
URxvt.color9: #cc6666
! green dark/light
URxvt.color2: #b5bd68
URxvt.color10: #b5bd68
! yellow dark/light
URxvt.color3: #f0c674
URxvt.color11: #f0c674
! blue dark/light
URxvt.color4: #81a2be
URxvt.color12: #81a2be
! magenta dark/light
URxvt.color5: #b294bb
URxvt.color13: #b294bb
! cyan dark/light
URxvt.color6: #8abeb7
URxvt.color14: #8abeb7
! white dark/light
URxvt.color7: #c5c8c6
URxvt.color15: #ffffff

! URxvt Extensions
URxvt.keysym.C-plus:   font-size:increase
URxvt.keysym.C-minus:  font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show


! rofi settings
rofi.lines: 12
rofi.width: 60
rofi.columns: 3
rofi.padding: 18
rofi.location: 0
rofi.font: Hack 14
rofi.sidebar-mode: true
rofi.color-enabled: true
rofi.modi: drun,run,window
rofi.color-window: #2e3440, #2e3440, #2e3440
rofi.color-normal: #2e3440, #d8dee9, #2e3440, #2e3440, #bf616a
rofi.color-active: #2e3440, #b48ead, #2e3440, #2e3440, #93e5cc
rofi.color-urgent: #2e3440, #ebcb8b, #2e3440, #2e3440, #ebcb8b

! General x settings
Xcursor.size: 16
