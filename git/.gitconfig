[core]
  editor = nvim
  pager = less -F -X

[color]
  ui = always
  branch = always
  diff = always
  interactive = always
  status = always
  grep = always
  pager = true
  decorate = always
  showbranch = always

[commit]
  gpgsign = true

[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[mergetool "vimdiff"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[diff]
  tool = vimdiff
[difftool "vimdiff"]
  cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process

[alias]
  a = add
  d = diff
  ds = diff --staged -w
  p = push
  b = branch
  bb = branch -a
  s = status -s
  aa = add --all
  co = checkout
  ec = config --global -e
  cm = commit -m
  amend = commit --amend
  remotes = remote -v
  cherry-pit = "!f() { git rebase -p --onto \"$1\"^ \"$1\"; }; f"
  l = log --relative-date --graph --abbrev-commit -10
  ll = log --relative-date --graph --abbrev-commit
  go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
  bd = branch -d

[format]
  pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s

[gpg]
  program = gpg2
