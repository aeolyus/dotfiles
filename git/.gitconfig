[core]
  editor = nvim
  pager = less -F -X

[color]
  ui = always
  branch = always
  diff = always
  interactive = always
  status = always
  grep = always
  pager = true
  decorate = always
  showbranch = always

[commit]
  gpgsign = true

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  required = true
  process = git-lfs filter-process

[alias]
  a = add
  aa = add --all
  co = checkout
  ec = config --global -e
  cm = commit -m
  amend = commit -a --amend
  s = status
  branches = branch -a
  remotes = remote -v
  l = log --relative-date --graph --abbrev-commit
  go = "!f() { git checkout -b \"$1\" 2> /dev/null || git checkout \"$1\"; }; f"
  db = branch -d

[format]
  pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s

[gpg]
  program = gpg2
